{
    "printWidth": 90,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "bracketSameLine": false,
    "singleAttributePerLine": false,
    "overrides": [
        {
            "files": ["*.{js,jsx,ts,tsx}"],
            "options": {
                "importOrder": ["<THIRD_PARTY_MODULES>", "", "^@/(.*)$", "", "^[.]"],
                "importOrderCaseSensitive": true,
                "plugins": ["@ianvs/prettier-plugin-sort-imports"]
            }
        }
    ]
}
